<?xml version="1.0"?>
<robot name="traxxas" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro" />
    <xacro:include filename="colors.xacro" />
    <xacro:include filename="gazebo_control.xacro" />
    <!-- Base link -->
    <link name="base_link">
    </link>

    <!-- Chassis START-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="0 0 0.1" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <geometry>
                <box size="0.568 0.296 0.193" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <geometry>
                <box size="0.568 0.296 0.193" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.568" y="0.296" z="0.193">
            <origin xyz="0 0 0.1" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Orange</material>
    </gazebo>

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="chassis" />
        <child link="rear_right_wheel" />
        <origin xyz="-0.15 0.200 0" rpy="-${pi/2} 0 0" />
        <dynamics damping="0.1"/>
        <limit effort="10" velocity="10" />
        <joint_properties damping="0.0" friction="0.0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rear_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="chassis" />
        <child link="rear_left_wheel" />
        <origin xyz="-0.15 -0.200 0" rpy="-${pi/2} 0 0" />
        <dynamics damping="0.1"/>
        <limit effort="10" velocity="10" />
        <joint_properties damping="0.0" friction="0.0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="rear_left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rear_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- FRONT RIGHT WHEEL -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <link name="front_right_steering_link">
        <visual>
            <geometry>
                <cylinder length="0.01" radius="0.1" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.01" radius="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="front_right_steering_link" />
        <child link="front_right_wheel" />
        <origin xyz="0 0 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="front_right_steering_joint" type="revolute">
        <parent link="chassis" />
        <child link="front_right_steering_link" />
        <origin xyz="0.2 -0.200 0" rpy="0 0 0" />
        <limit lower="-0.6" upper="0.6" effort="10" velocity="0" />
        <axis xyz="0 0 1" />
    </joint>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Yellow</material>
    </gazebo>

    <gazebo reference="front_right_steering_link">
        <material>Gazebo/OrangeTransparent</material>
    </gazebo>

    <!-- END FRONT RIGHT WHEEL -->

    <!-- FRONT LEFT WHEEL -->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <link name="front_left_steering_link">
        <visual>
            <geometry>
                <cylinder length="0.01" radius="0.1" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.01" radius="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="front_left_steering_link" />
        <child link="front_left_wheel" />
        <origin xyz="0 0 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="front_left_steering_joint" type="revolute">
        <parent link="chassis" />
        <child link="front_left_steering_link" />
        <origin xyz="0.2 0.2 0" rpy="0 0 0" />
        <limit lower="-0.6" upper="0.6" effort="10" velocity="0" />
        <axis xyz="0 0 1" />
    </joint>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Yellow</material>
    </gazebo>


    <gazebo reference="front_left_steering_link">
        <material>Gazebo/OrangeTransparent</material>
    </gazebo>

    <!-- END FRONT LEFT WHEEL -->
</robot>